{
  "name": "@event-driven-architecture/repository",
  "private": true,
  "version": "0.0.0",
  "description": "A modular, framework-agnostic package for building event-driven architectures in TypeScript server side applications.",
  "scripts": {
    "start:dev": "tsc --watch",
    "test:dev": "nx run-many -t test --watch",
    "test": "nx run-many -t test",
    "lint": "eslint --fix",
    "format": "prettier --write .",
    "prepare": "husky",
    "pre-commit": "lint-staged && tsc-files --noEmit",
    "build": "pnpm exec nx run-many -t build",
    "release": "changeset publish"
  },
  "lint-staged": {
    "**/*.{js,mjs,cjs,ts}": [
      "eslint --fix",
      "prettier --write",
      "git add -p"
    ]
  },
  "keywords": [],
  "author": "Andrii Artemenko",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/artandrey/event-driven.git"
  },
  "bugs": {
    "url": "https://github.com/artandrey/event-driven/issues"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.39.1",
    "@nestjs/common": "^11.1.9",
    "@nestjs/core": "^11.1.11",
    "@nestjs/testing": "^11.1.8",
    "@nx/js": "^21.6.2",
    "@nx/rollup": "21.6.2",
    "@nx/vite": "^22.3.3",
    "@nx/web": "21.6.2",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^22.15.3",
    "@vitest/ui": "^3.0.0",
    "eslint": "^9.39.1",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jiti": "2.6.1",
    "lint-staged": "^16.2.7",
    "nx": "21.6.2",
    "prettier": "^3.6.2",
    "tsc-files": "^1.1.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0",
    "vite": "^6.0.0",
    "vitest": "^3.2.4"
  }
}
